
<button onclick="modal('addForm')" class="bg-green-300 hover:bg-green-900 hover:text-green-50 text-green-900 font-bold py-2 px-6 rounded float-right">Tambah Kategori</button>
<br>

<!--! MODAL -->
<div class="modal fixed w-screen h-screen z-10 hidden" id="addForm">
    <div class="flex items-center justify-center fixed left-0 bottom-0 w-screen h-screen bg-gray-800 z-10 opacity-50"></div>
    <div class="flex items-center justify-center fixed left-0 bottom-0 w-screen h-screen bg-transparent z-10">
        <div class="bg-green-50 rounded-lg w-1/2">
        <div class="flex flex-col items-start p-4">
            <div class="flex items-center w-full">
            <div class="text-green-900 font-bold text-xl ml-4">Arsip Inaktif</div>
            <svg class="ml-auto fill-current text-green-700 hover:text-green-900 hover:bg-green-400 rounded-full bg-transparent p-1 w-8 h-8 cursor-pointer" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 18 18" onclick="closeModal('addForm')">
                <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"/>
            </svg>
        </div>
            <div class="grid place-items-center w-full gap-2">
                <form class="flex flex-col  pt-3 w-10/12 text-green-900" action="" method="POST">
                    <div class="flex  pt-4 justify-between">
                        <label for="kode" class="text-lg w-1/4 ">Kode</label>
                        <input type="number" id="kode" placeholder="Kode" class="shadow appearance-none w-9/12  py-2 px-3 text-green-900 bg-green-200 focus:bg-green-50 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-green-400  rounded-md " name="Kode">
                    </div>
    
                    <div class="flex  pt-4 justify-between">
                        <label for="nama" class="text-lg w-1/6 ">Nama</label>
                        <input type="text" id="nama" placeholder="Nama" class="shadow appearance-none w-9/12 py-2 px-3 text-green-900 bg-green-200 focus:bg-green-50 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-green-400 rounded-md" name="Nama">
                    </div>
                    
                    <div class="flex  pt-4 justify-between">
                        <label for="tahun" class="text-lg w-1/6 ">Tahun</label>
                        <input type="number" id="tahun" placeholder="Tahun" class="shadow appearance-none w-9/12 py-2 px-3 text-green-900 bg-green-200 focus:bg-green-50 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-green-400 rounded-md" name="Tahun">
                    </div>

                    <div class="flex  pt-4 justify-between">
                        <label for="status" class="text-lg w-1/4 ">Status</label>
                        <div class="w-9/12">
                            <select type="text" name="Status" class="t_form py-0 px-2 w-1/4 " id="status" >
                                <option value="" disabled>Choose one</option>
                                <option value="Locked">Locked</option>
                                <option value="Unlocked">Unlocked</option>
                            </select>
                        </div>
                    </div>
                    <br>
                    <div class="ml-auto">
                    <button class="bg-green-500 hover:bg-green-700 text-green-50 font-bold py-2 px-6 rounded">
                        Tambah
                    </button>
                </form>
            </div>
            </div>
        </div>
        </div>
    </div>
</div>
<!-- !End Modal -->

<br>
<br>
<div class="shadow border-b border-gray-200 sm:rounded-lg overflow-scroll" style="max-height: 60vh;">
    <table class="min-w-full divide-y divide-gray-200 h-1/2">
        <thead class="bg-green-300">
            <tr class="text-green-900 font-bold">
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium uppercase tracking-wider">
                    No
                </th>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium  uppercase tracking-wider">
                    Action
                </th>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium uppercase tracking-wider">
                    Kode
                </th>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium uppercase tracking-wider">
                    Nama
                </th>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium uppercase tracking-wider">
                    OPD / DINAS 
                </th>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium uppercase tracking-wider whitespace-nowrap">
                    n/ arsip
                </th>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium uppercase tracking-wider">
                    Status
                </th>
                <th scope="col" class="px-3 py-2 text-left text-xs font-medium uppercase tracking-wider">
                    Tahun
                </th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
        <% list.forEach((element,index) => { %>
            <tr>
                <td class="px-2 py-1 whitespace-nowrap text-center"><%= index + 1%></td>
                <td class="px-2 py-1 w-full flex h-full items-center justify-center ">
                    <a href="/open/<%= element.Kode %> " id="open" class="w-7 h-7 bg-green-100 rounded-full grid place-items-center border border-green-900 hover:bg-green-300">
                        <svg xmlns="http://www.w3.org/2000/svg" class="text-green-600" viewBox="0 0 24 24" width="15" height="15"><path fill="none" d="M0 0h24v24H0z"/><path d="M3 21a1 1 0 0 1-1-1V4a1 1 0 0 1 1-1h7.414l2 2H20a1 1 0 0 1 1 1v3h-2V7h-7.414l-2-2H4v11.998L5.5 11h17l-2.31 9.243a1 1 0 0 1-.97.757H3zm16.938-8H7.062l-1.5 6h12.876l1.5-6z"/></svg>
                    </a>
                    <!-- <a href="/kategori/delete/<%= element._id %> " id="delete" class="">Delete</a> -->
                </td>
                <td class="px-2 py-1 whitespace-nowrap text-center"><%= element.Kode%></td>
                <td class="px-2 py-1 "><%= element.Nama %></td>
                <td class="px-2 py-1 ">BADAN PENGELOLAAN KEUANGAN DAN ASET DAERAH</td>
                <td class="px-2 py-1 whitespace-nowrap text-center"><%= element.Total_Data %> </td>
                <td class="px-2 py-1 whitespace-nowrap text-center">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= element.Status == "Unlocked" ? "bg-green-200" : "bg-red-200" %>  text-green-800">
                        <%= element.Status %>
                    </span>
                </td>
                <td class="px-2 py-1 whitespace-nowrap text-center"><%= element.Tahun %> </td>
            </tr>
        <% }); %> 
            <!-- More items... -->
        </tbody>
    </table>
</div>