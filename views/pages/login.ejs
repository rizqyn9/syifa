<%- include('./components/_head') %>

<div class="login " style="width: 100vw;">

    <div class="w-full flex flex-wrap bg-green-100">

        <!-- Login Section -->
        <div class="w-full md:w-1/2 flex flex-col text-green-900 font-medium">

            <div class="flex justify-center md:justify-start pt-8 md:pl-12 md:-mb-24 items-center">
                <img src="/img/LogoProvinsi-2.png" alt="" style="width: 4rem; height: 4rem;">
                <div class="ml-4">
                    <p class="text-xl font-bold">Badan Pengelolaan Keuangan dan Aset</p>
                    <p class="text-xl font-bold">Daerah Provisi Jawa Tengah</p>
                </div>
            </div>

            <div class="flex flex-col justify-center md:justify-start my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
                <p class="text-center text-3xl">Selamat Datang di SIAI.</p>
                <form class="flex flex-col pt-3 md:pt-8 " action="/auth/login" method="POST">
                    <% if(alert.message != "") { %>
                        <div class="mt-3 text-red-600 w-full text-center font-semibold text-lg">
                            <%= alert.message %>
                        </div>
                    <% } %>
                    <div class="flex flex-col pt-4">
                        <label for="username" class="text-lg">Username</label>
                        <input type="text" id="username" placeholder="username" class="shadow appearance-none border rounded w-full py-2 px-3 text-green-900 mt-1 bg-green-300 focus:bg-green-100 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-green-400 " autocomplete="off" name="name">
                    </div>
    
                    <div class="flex flex-col pt-4">
                        <label for="password" class="text-lg">Password</label>
                        <input type="password" id="password" placeholder="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-green-900 mt-1 bg-green-300 focus:bg-green-100 leading-tight focus:outline-none focus:shadow-outline focus:ring-2 focus:ring-green-400" autocomplete="off" name="password">
                    </div>
    
                    <input type="submit" value="Log In" class="bg-black text-white font-bold text-lg hover:bg-green-700 p-2 mt-8">
                </form>
                <div class="text-center pt-12 pb-12">
                    <p>Don't have an account? <a href="/auth/signup" class="underline font-semibold">Register here.</a></p>
                </div>
            </div>
        </div>

        <!-- Image Section -->
        <div class="w-1/2 shadow-2xl">
            <img class="object-cover w-full h-screen hidden md:block" src="img/cover/Frame1.png">
        </div>
    </div>

</div>
<%- include('./components/_footer') %>