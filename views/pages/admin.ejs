<%- include('./components/_head') %>
<%- include('./components/_navbar') %>
<%- include('./components/_container') %>
<% if(alert.message != "") { %>
    <div class="alert-toast t_alert-position" >
        <input type="checkbox" class="hidden" id="footertoast">
        <label class="close t_alert-container  <%= alert.status == "success" ? 'bg-green-200' : 'bg-red-200' %> " title="close" for="footertoast" style="min-height: 5rem;">
            <svg class="t_alert-close" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
                <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
            </svg>
            <div class="t_alert-message">
                <%= alert.message %>
            </div>
        </label>
    </div>
<% } %>
<div class="h-full w-full" x-data="{ showModal1: false, showModal2: false, showModal3: false }" :class="{'overflow-y-hidden': showModal1 || showModal2 || showModal3}">
    <br>
    <div class="px-10 h-2/5 overflow-hidden text-green-900">
        <div class="flex justify-between items-center">
            <h1 class="text-2xl font-bold text-green-700">Daftar Admin</h1>
            <button class="bg-transparent hover:bg-green-800 text-green-900 font-semibold hover:text-green-50 py-2 px-4 border border-green-900 hover:border-transparent w-1/6 rounded-md"
                @click="showModal1 = true">
                Tambah Admin
            </button>
        </div>
        <br>
        <div class="table-wrapper h-full overflow-scroll ">
            <table class="w-full bg-green-50">
                <thead class="bg-green-200">
                    <tr>
                        <th>No</th>
                        <th>Nama</th>
                        <th>Email</th>
                        <th>Created At</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% dataAdmin.forEach((element,index) => { %>
                        <tr class="bg-green-100 py-3">
                            <td><%= index + 1%> </td>
                            <td><%= element.name%></td>
                            <td><%= element.email%> </td>
                            <td><%= element.created_At %> </td>
                            <td>
                                <a href="admin/demote/<%= element._id %>" > DEMOTE </a>
                                <a href="admin/delete/<%= element._id%> ">DELETE</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
