<script>
        function modalUser (data) {
            // console.log(data);
            let ubahdata =document.getElementById('ubahData') 
            let textUbahData =document.getElementById('text-ubah-data') 
            let form = document.getElementById('FormUbahdata')
            let deleteUser = document.getElementById('deleteUser')
            let positionUser= document.getElementById('positionUser')

            if(!ubahdata.classList.contains('hidden')) {
                ubahdata.classList.add('hidden')
            }
            if(textUbahData.classList.contains('hidden')) {
                textUbahData.classList.remove('hidden')
            }
            if(form.classList.contains('bg-green-100')) {
                form.classList.remove('bg-green-100')
            }

            let name = data.getAttribute('data-name')
            let id = data.getAttribute('data-id')
            let email = data.getAttribute('data-email')
            let admin = data.getAttribute('data-admin')
            // console.log(typeof admin);

            admin = admin == "true" ? true : false
            deleteUser.href = `admin/delete/${id}`
            
            positionUser.href = admin? `admin/promote/${id}` : `admin/demote/${id}`
            positionUser.innerHTML =  admin? `Promote` : `Demote`
            initModal('#userModal',name,id,email)
            form.action = `/admin/${id}/edit`
            // console.log(form);
          }

          function initModal (ID_modal,_name,_id,_email) {  
            let modal = document.querySelector(ID_modal)
            modal.classList.remove('hidden')
            modal.querySelector('#user_name').value = _name;
            modal.querySelector('#user_email').value = _email;
            modal.querySelector('#user_id').value = _id;
          }

          function ubahData(DOM_id, _self) {
            document.getElementById(DOM_id).classList.remove('hidden')
            _self.classList.add('hidden')
            document.querySelectorAll('form .t_form').forEach(el => {
                el.disabled= false
            })
            document.getElementById('FormUbahdata').classList.add('bg-green-100')

          }
</script>